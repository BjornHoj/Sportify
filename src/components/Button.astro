---
const { variant, size } = Astro.props;
---

<button class={variant + " " + size}><slot /></button>

<style>
  button {
    margin: 0px 8px 0px 0px;
    border-radius: 2rem;
  }

  .primary {
    background-color: rgb(255, 255, 255);
    padding: 8px 15px;
  }

  .primary:hover {
    background-color: black;
    color: aliceblue;
    border: 2px solid white;
  }

  .secondary {
    background-color: rgb(0, 0, 0);
    color: antiquewhite;
    padding: 8px 15px;
  }

  .secondary:hover {
    background-color: aliceblue;
    color: black;
    border: 2px solid white;
  }

  .tertiary {
    background-color: antiquewhite;
    color: black;
    padding: 6.5px 12px;
  }

  .tertiary:hover {
    color: black;
    font-size: 0.9rem;
  }

  .small {
    font-size: 0.5rem;
  }
  .medium {
    font-size: 1rem;
  }
</style>
